{% extends "layout.html.twig" %}

{% block body %}
<div class="container">


<div class="row">
  <div class="col-md-12 text-center" style="margin-bottom:50px;">

    <a href="{{path('new_workshop') }}" class="btn btn-danger">Créer un atelier</a>
  </div>
</div>


  <div class="row">
    {% for workshop in workshops %}
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <img src="/images/{{ workshop['image'] }}" alt="...">
        <div class="caption">
          <h3>{{ workshop['title'] }}</h3>
          <p>{{ workshop['description'] }}</p>

          <p>{{ workshop['time'] }}</p>

          <div>
            <p class="pull-left">{{ workshop['start'] }} - {{ workshop['end'] }} ans</p>
            <p class="pull-right">{{ workshop['price'] }} €</p>
          </div>

          <br><br>

          <p class="text-center"><a href="{{path('workshop_delete', {'id': workshop.workshop_id}) }}" class="btn btn-warning" role="button">Supprimer</a></p>
        </div>
      </div>
    </div>

  {% endfor %}
</div>

</div>
{% endblock %}
